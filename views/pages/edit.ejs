<link rel="stylesheet" href="../../css/style.css" />

<% if(message != '') { %>
  <div class="alert msg alert-danger w-75 mx-auto my-2"> 
      <%= message %>
  </div>
<% } %>

<section class="w-75 mx-auto my-2">
  <div class="container">

    <form action="/events/<%= event.id %>/edit" method="post">
      <div class="form-group my-1">
        <label for="title">Event title</label>
        <input type="text" class="form-control" id="title" name="title" placeholder="Event title"
          value="<%= event.title%>">
      </div>
      <div class="form-group my-1">
        <label for="price">Event price</label>
        <input type="number" class="form-control" id="price" name="price" placeholder="Event price"
          value="<%= event.price %>">
      </div>
      <div class="form-group my-1">
        <label for="description">Event Description</label>
        <textarea name="description" id="description" class="form-control" style="height: 140px;">
          <%= event.description %>
        </textarea>
      </div>
      <input type="submit" value="Update Event" class="btn btn-outline-primary mt-2 w-25">
    </form>
  </div>
</section>