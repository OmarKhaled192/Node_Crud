<section class="p-3">
  <% if(message != '') { %>
  <div class="alert msg alert-danger mx-auto text-center w-50 my-2"> 
      <%= message %>
  </div>
<% } %>
</section>

<section class="w-75 mx-auto">
  <div class="container">
    <form action="/events/create" method="post">
      <div class="form-group my-1">
        <label for="title">Event title</label>
        <input type="text" class="form-control" id="title" name="title" placeholder="Event title" value="<%=myEvent.title%>">
      </div>
      <div class="form-group my-1">
        <label for="price">Event price</label>
        <input type="number" class="form-control" id="price" name="price" placeholder="Event price" value="<%=myEvent.price %>">
      </div>
      <div class="form-group my-1">
        <label for="description">Event Description</label>
        <textarea name="description" id="description" class="form-control" style="height: 140px;"><%= myEvent.description %></textarea>
      </div>
      <input type="submit" value="Add Event" class="btn btn-outline-primary mt-2 w-25" >
    </form>
  </div>
</section>